<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeScreenActivity">

    <ImageButton
        android:id="@+id/icon_menu"
        android:src="@drawable/icon_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </ImageButton>
    <ImageButton
        android:id="@+id/icon_search"
        android:src="@drawable/icon_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="-50dp">
    </ImageButton>

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/text_view_in_theater"
        android:layout_width="wrap_content"
        android:text="In Theater"
        style="@style/Topic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icon_menu"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/text_view_box_office"
        android:layout_width="wrap_content"
        android:text="Box Office"
        style="@style/Topic"
        app:layout_constraintStart_toEndOf="@id/text_view_in_theater"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@id/icon_menu"
        android:layout_height="wrap_content"></TextView>
    <Button
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/genre_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text_view_in_theater"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Action"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:background="@drawable/roundedbutton">
    </Button>
    <Button
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/genre_crime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text_view_in_theater"
        app:layout_constraintStart_toEndOf="@id/genre_action"
        android:text="Crime"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:background="@drawable/roundedbutton">
    </Button>
    <Button
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/genre_comedy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text_view_in_theater"
        app:layout_constraintStart_toEndOf="@id/genre_crime"
        android:text="Comedy"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:background="@drawable/roundedbutton">
    </Button>
    <Button
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/genre_drama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text_view_in_theater"
        app:layout_constraintStart_toEndOf="@id/genre_comedy"
        android:text="Drama"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:background="@drawable/roundedbutton">
    </Button>
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="300dp"
        android:id="@+id/icon_film"
        android:layout_height="300dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:shapeAppearanceOverlay="@style/roundedImageView"
        android:clipToOutline="true"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/icon_film"></com.google.android.material.imageview.ShapeableImageView>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/text_view_movie_name"
        android:layout_width="wrap_content"
        android:text="Unknown"
        style="@style/Topic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icon_film"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/text_view_movie_score"
        android:layout_width="wrap_content"
        android:drawableLeft="@drawable/icon_star"
        android:text="7.2"
        style="@style/Topic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_movie_name"
        android:layout_height="wrap_content"></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>